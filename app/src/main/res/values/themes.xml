<resources>
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="backgroundColor">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="numberButton">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:background">@drawable/button_view</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">7dp</item>
    </style>

    <style name="actionButton">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:background">@drawable/action_buttons</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:textColor">@color/actionText</item>
    </style>
</resources>